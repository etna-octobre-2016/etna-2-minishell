###################################################
# VARIABLES
###################################################

# Project name
# -------------------------------------------------
NAME=ironsh

# Commands
# -------------------------------------------------
CC=gcc
CFLAGS=-W -Wall -Werror -Wextra -std=c11
DEBUGGER=gdb
RM=rm -rf

# Directories
# -------------------------------------------------
BINDIR=./bin
SRCDIR=./src

# Files
# -------------------------------------------------
BIN=$(BINDIR)/$(NAME)
SRC:=$(wildcard $(SRCDIR)/*.c $(SRCDIR)/printf/*.c)

###################################################
# TARGETS
###################################################

all:clean $(NAME)

# Compiling
# -------------------------------------------------
$(NAME):$(BINDIR)
	$(CC) $(CFLAGS) $(SRC) -o $(BIN)

# Directories
# -------------------------------------------------
$(BINDIR):
	mkdir -p $(BINDIR)

# Utils
# -------------------------------------------------
clean:
	$(RM) $(BIN)
